{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}
	<a href="{{path('nouvelEleve')}}">Créer un éleve</a>
	<table>
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Moyenne</th>
				<th>Appreciation</th>
				<th>Date de naissance</th>
			</tr>
		</thead>

		<tbody>
			{% for eleve in eleves %}
				<tr>
					<td>{{eleve.nom}}</td>
					<td>{{eleve.prenom}}</td>
					<td>{{eleve.moyenne}}</td>
					<td>{{eleve.appreciation}}</td>
					<td>{{eleve.dateNaissance|date("m/d/Y")}}</td>
					<td>
						<a href="{{path('modifEleve',{id:eleve.id})}}">Modifier</a>
					</td>

				</tr>

			{% endfor %}
		</tbody>

		<tfoot>
			<tr>
				<th>Nom</th>
				<th>Premon</th>
				<th>Moyenne</th>
				<th>Appreciation</th>
				<th>Date de naissance</th>
			</tr>
		</tfoot>
	</table>
{% endblock %}
